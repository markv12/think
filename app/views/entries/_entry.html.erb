<div class="row">
  <div class="columns large-centered large-12">
    <br>
    <% todays_entry = current_user.todays_entry() %>
    <% if entry == todays_entry %>
      <%= render partial: 'entries/form', locals: {entry: entry}%>
    <% else %>
      <p id="entry_area">
        <%= newline_to_br(entry.text) %>
      </p>
      <div class="row">
        <div class="columns large-8">
        <p></p>
        </div>
        <div class="columns large-2">
          <h4 class="inline" id="wordcount_indicator">  </h4>
        </div>
      </div>
    <% end %>
    <div class="centered">
      <%= render partial: 'entries/entry_history', locals: {entries: current_user.entries, current_entry: entry} %>
    </div>
  </div>
</div>