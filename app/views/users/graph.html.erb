<div class="cell large-12">
  <h3>Total Words Typed: <%= number_with_delimiter(current_user.total_word_count, delimiter: ',') %></h3>
  <h3>Total Unique Words: <%= number_with_delimiter(current_user.total_unique_words, delimiter: ',') %></h3>
  <h3>Most Used Words:</h3>
</div>
<%
  most_used_words = current_user.most_used_words
  adjustment_constant = 1
  if(!most_used_words.empty?)
    adjustment_constant = 18.0/most_used_words.first[1]
  end
%>
<% most_used_words.each do |word ,v| %>
  <span class="uniq_word" title="<%= v %>" style="font-size:<%= v*adjustment_constant +0.6%>em"><%= word %>&nbsp;</span>
<% end %>

<script>
  function getRandomColor() {
      var letters = '0123456789ABCDEF'.split('');
      var color = '#';
      for (var i = 0; i < 6; i++ ) {
          color += letters[Math.floor(Math.random() * 15)];
      }
      return color;
  }
  $(".uniq_word").each(function(){
    $(this).css("color", getRandomColor());
  });
</script>